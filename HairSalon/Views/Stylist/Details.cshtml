@using HairSalon.Models;
@model HairSalon.Models.Stylist;
@{
    ViewData["Title"] = @Model.Name;
    Layout = "_Layout";
}

<h1>@Model.Name</h1>
<h4>@Model.Details</h4>
<h5>Clients</h5>
    @if (@Model.Clients.Count == 0)
    {
        <p><em>No Clients</em></p>
    }
    else
    {

        <ul>
            @foreach(Client client in Model.Clients)
            {
                <li>@Html.ActionLink($"{client.Name}", "Details", "Client",new { id = client.ClientId })| @Html.ActionLink("Remove", "Delete", "Client", new  { id = client.ClientId })</li>
            }
        </ul>
    }

<!-- <p>@Html.ActionLink("Add Client", "Create", "Client", new {id = Model.StylistId })</p> -->
<p>@Html.RouteLink("Add Client", "StylistClient", new {id = Model.StylistId })</p>